{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://www.gremory.org/gitea/fargie_s/ppm/src/branch/master/data/schema.json",
  "title": "PPM configuration schema",
  "description": "Configuration schema for Partner Process Monitoring tool",
  "type": "object",
  "properties": {
    "stats_interval": { "$ref": "#/$defs/duration" },
    "restart_interval": { "$ref": "#/$defs/duration" },
    "watch_restart_interval": { "$ref": "#/$defs/duration" },
    "clock_check_interval": { "$ref": "#/$defs/duration" },
    "services": {
      "description": "Services to spawn and monitor",
      "type": "array",
      "items": { "$ref": "#/$defs/service" }
    },
    "logger": { "$ref": "#/$defs/logger" }
  },
  "additionalProperties": false,
  "required": ["services"],
  "$defs": {
    "service": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "name": { "type": "string" },
        "command": { "$ref": "#/$defs/command" },
        "schedule": {
          "type": "string",
          "examples": ["*/15 * * * * *", "59 23 * APR,MAY SAT,SUN"],
          "pattern": "^([0-9*/,?-]+)? [0-9*/,?-]+ [0-9*/,?-]+ [0-9*/,?-]+ ([0-9*/,?-]+|[Jj][Aa][Nn]|[Ff][Ee][Bb]|[Mm][Aa][RrYy]|[Aa][Pp][Rr]|[Jj][Uu][NnLl]|[Aa][Uu][Gg]|[Ss][Ee][Pp[|[Oo][Cc][Tt]|[Nn][Oo][Vv]|[Dd][Ee][Cc]) ([0-9*/,?-]+|-?[Ss][Uu][Nn]|[Mm][Oo][Nn]|[Tt][Uu][Ee]|[Ww][Ee][Dd]|[Tt][Hh][Uu]|[Ff][Rr][Ii]|[Ss][Aa][Tt])$"
        },
        "watch": { "$ref": "#/$defs/watch" },
        "workdir": { "type": "string" }
      },
      "required": ["name", "command"]
    },
    "command": {
      "type": "object",
      "properties": {
        "path": { "type": "string" },
        "args": { "type": "array", "items": { "type": "string" } },
        "env": { "type": "object", "items": { "type": "string" } }
      },
      "required": ["path"]
    },
    "one_or_many_str": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "array",
          "items": { "type": "string" }
        }
      ]
    },
    "watch": {
      "oneOf": [
        {
          "$ref": "#/$defs/one_or_many_str",
          "description": "path or paths list"
        },
        {
          "type": "object",
          "properties": {
            "paths": {
              "$ref": "#/$defs/one_or_many_str",
              "description": "path or paths list"
            },
            "include": {
              "$ref": "#/$defs/one_or_many_str",
              "description": "glob patterns"
            },
            "exclude": {
              "$ref": "#/$defs/one_or_many_str",
              "description": "glob patterns"
            },
            "max_depth": { "type": "integer" }
          },
          "required": ["paths"]
        }
      ]
    },
    "duration": {
      "type": "string",
      "examples": ["2h", "1h30m"],
      "pattern": "^([0-9]+year(s)?)?\\s*([0-9]+month(s)?)?\\s*([0-9]+day(s)?)?\\s*([0-9]+h)?\\s*([0-9]+m)?\\s*([0-9]+s)?\\s*([0-9]+ms)?$"
    },
    "logger": {
      "type": "object",
      "description": "Logger configuration",
      "properties": {
        "path": { "type": "string" },
        "max_files": { "type": "integer" },
        "max_file_size": {
          "anyOf": [
            {
              "type": "string",
              "examples": ["20MiB", "1.5 GB"],
              "pattern": "^[0-9]+([.][0-9]+)?\\s*[KkMmGg][iI]?[Bb]?$"
            },
            { "type": "integer" }
          ]
        }
      }
    }
  }
}
